<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordSuccessActivity">

    <include
        android:id="@+id/include2"
        layout="@layout/statusbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/label_passwordRecoveryMsg"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/include2" />

    <Button
        android:id="@+id/buttonResendEmail"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESEND EMAIL"
        android:layout_marginBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonGoToEmail" />
    <Button
        android:id="@+id/buttonGoToEmail"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GO TO EMAIL"
        android:layout_marginBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>