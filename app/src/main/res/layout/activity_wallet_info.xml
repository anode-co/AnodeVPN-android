<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wallet.WalletInfoActivity">
    <WebView
        android:id="@+id/walletinfoWebview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonRefreshWalletInfo" />
    <Button
        android:id="@+id/buttonRefreshWalletInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_reload"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="#C9DDE9"
        android:background="@drawable/buttonshape"/>
</RelativeLayout>