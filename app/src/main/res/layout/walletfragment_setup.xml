<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wallet.WalletFragmentSetup"
    android:id="@+id/wallet_fragmentCreate"
    android:background="@android:color/white"
    tools:ignore="ExtraText">
    <include layout="@layout/statusbar"/>
    <TextView
        android:id="@+id/text_walletcreate_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wallet_create_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="12pt"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:id="@+id/create_wallet_password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/text_walletcreate_label">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/newwalletpasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/editfield_margin"
            android:layout_marginEnd="@dimen/editfield_margin"
            app:passwordToggleEnabled="true"
            app:errorEnabled="true">
            <EditText
                android:id="@+id/editTextWalletPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/prompt_newpin"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:autofillHints="test" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/confirmwalletpasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/editfield_margin"
            android:layout_marginEnd="@dimen/editfield_margin"
            app:passwordToggleEnabled="true"
            tools:layout_editor_absoluteX="0dp"
            app:errorEnabled="true">
            <EditText
                android:id="@+id/editTextconfirmWalletPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/prompt_confirmpin"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:autofillHints="test" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/create_wallet_show_seed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/text_walletcreate_label">
        <TextView
            android:id="@+id/text_walletcreate_seed_instructions"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/wallet_create_seed_instructions"
            app:layout_constraintTop_toBottomOf="@id/text_walletcreate_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:textAlignment="center"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:textSize="8pt" />
        <LinearLayout
            android:id="@+id/seed_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/text_walletcreate_seed_instructions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/seed_column"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textIsSelectable="true"
                android:textSize="10pt"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/recover_seed_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/create_wallet_password_layout"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallet_write_seed_label" />
        <EditText
            android:id="@+id/input_seed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="3"
            android:maxLines="3"
            android:inputType="textMultiLine" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/walletaezeedpassLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            tools:layout_editor_absoluteX="0dp"
            app:errorEnabled="true">
            <EditText
                android:id="@+id/editTextWalletAezeedPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/prompt_seed_password"
                android:inputType="textPassword"
                android:autofillHints="test" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <Button
        android:id="@+id/button_wallet_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wallet_create"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_wallet_recover_from_seed"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:layout_marginBottom="@dimen/bottom_button_margin"
        android:textColor="#C9DDE9"
        android:background="@drawable/buttonshape"/>
    <Button
        android:id="@+id/button_wallet_recover_from_seed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_wallet_recover_from_seed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_wallet_create"
        android:textSize="16sp"
        android:layout_marginBottom="@dimen/bottom_button_margin"
        android:textColor="#C9DDE9"
        android:background="@drawable/buttonshape"/>
    <Button
        android:id="@+id/button_wallet_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:layout_marginBottom="@dimen/bottom_button_margin"
        android:textColor="#C9DDE9"
        android:background="@drawable/buttonshape"/>
</androidx.constraintlayout.widget.ConstraintLayout>