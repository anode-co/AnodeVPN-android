<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WalletStatsActivity">

    <TextView
        android:id="@+id/wstats_address_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="Address"/>
    <TextView
        android:id="@+id/wstats_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sample address..."
        android:textIsSelectable="true"
        app:layout_constraintTop_toBottomOf="@+id/wstats_address_label"
        app:layout_constraintStart_toStartOf="@+id/wstats_address_label"/>
    <TextView
        android:id="@+id/wstats_balance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/wstats_address"
        app:layout_constraintStart_toStartOf="@+id/wstats_address"
        android:text="Balance"/>
    <TextView
        android:id="@+id/wstats_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PKT 123.00"
        app:layout_constraintBottom_toBottomOf="@+id/wstats_balance_label"
        app:layout_constraintStart_toEndOf="@+id/wstats_balance_label"
        android:textIsSelectable="true"
        android:layout_marginStart="20dp"/>
    <TextView
        android:id="@+id/wstats_bheight_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Block height"
        app:layout_constraintTop_toBottomOf="@+id/wstats_balance_label"
        app:layout_constraintStart_toStartOf="@+id/wstats_balance_label"/>
    <TextView
        android:id="@+id/wstats_bheight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/wstats_bheight_label"
        app:layout_constraintBottom_toBottomOf="@+id/wstats_bheight_label"
        android:text="sample block height" />
    <TextView
        android:id="@+id/wstats_bhash_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Block Hash"
        app:layout_constraintTop_toBottomOf="@+id/wstats_bheight"
        app:layout_constraintStart_toStartOf="@+id/wstats_bheight_label"/>
    <TextView
        android:id="@+id/wstats_bhash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="block hash sample"
        app:layout_constraintStart_toStartOf="@+id/wstats_bhash_label"
        app:layout_constraintTop_toBottomOf="@+id/wstats_bhash_label"
        android:textIsSelectable="true" />
    <TextView
        android:id="@+id/wstats_bheader_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Header timestamp"
        app:layout_constraintTop_toBottomOf="@+id/wstats_bhash"
        app:layout_constraintStart_toStartOf="@+id/wstats_bhash_label"/>
    <TextView
        android:id="@+id/wstats_bheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="timestamp"
        app:layout_constraintStart_toEndOf="@+id/wstats_bheader_label"
        app:layout_constraintBottom_toBottomOf="@+id/wstats_bheader_label"
        android:layout_marginStart="20dp"/>
    <TextView
        android:id="@+id/wstats_synced_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Synced"
        app:layout_constraintTop_toBottomOf="@+id/wstats_bheader_label"
        app:layout_constraintStart_toStartOf="@+id/wstats_bheader_label"/>
    <TextView
        android:id="@+id/wstats_synced"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="synced to chain"
        app:layout_constraintStart_toEndOf="@+id/wstats_synced_label"
        app:layout_constraintBottom_toBottomOf="@+id/wstats_synced_label"
        android:layout_marginStart="20dp"/>
    <Button
        android:id="@+id/buttonViewWalletLog"
        android:layout_marginLeft="@dimen/button_margin"
        android:layout_marginRight="@dimen/button_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_view_wallet_log"
        android:textSize="16sp"
        android:layout_marginBottom="@dimen/bottom_button_margin"
        android:textColor="#C9DDE9"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/buttonshape"/>
</androidx.constraintlayout.widget.ConstraintLayout>