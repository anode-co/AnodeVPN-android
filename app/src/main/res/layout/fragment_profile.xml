<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment"
    android:theme="@style/AppTheme">
        <include layout="@layout/statusbar"/>
        <TextView
            android:id="@+id/label_wallets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:textSize="10pt"
            android:layout_marginTop="20dp"
            android:text="Wallets"/>
        <LinearLayout
            android:id="@+id/layout_wallets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/label_wallets"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:gravity="end">
                <Spinner
                    android:id="@+id/wallet_selector"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown"
                    android:layout_weight="1"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <ImageButton
                    android:id="@+id/button_edit_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_edit_24"
                    android:background="@color/colorPrimarybackground"
                    app:tint="@color/colorPrimary"
                    android:contentDescription="Edit wallet" />
                <ImageButton
                    android:id="@+id/button_add_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_badd_circle_48"
                    android:background="@color/colorPrimarybackground"
                    app:tint="@color/colorPrimary"
                    android:contentDescription="Add wallet" />
                <ImageButton
                    android:id="@+id/button_export_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_circle_up_24"
                    android:background="@color/colorPrimarybackground"
                    app:tint="@color/colorPrimary"
                    android:contentDescription="Export wallet" />
        </LinearLayout>

        <TextView
            android:id="@+id/user_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_wallets"
            android:textSize="10pt"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintStart_toEndOf="@+id/user_id_label"
            app:layout_constraintBottom_toBottomOf="@+id/user_id_label"
            android:textSize="10pt"
            android:layout_marginStart="5dp"/>
        <TextView
            android:id="@+id/version_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_id_label"
            android:text="Version: "
            android:textSize="10pt"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>
        <Button
            android:id="@+id/button_change_password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/button_wallet_change_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/version_number"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:textSize="8pt"
            android:textColor="#C9DDE9"
            android:background="@drawable/thin_button"/>
        <Button
            android:id="@+id/button_show_seed"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/button_show_seed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_change_password"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textSize="8pt"
            android:textColor="#C9DDE9"
            android:background="@drawable/thin_button"/>
        <Button
            android:id="@+id/button_cjdns_stats"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/button_cjdns_stats"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_show_seed"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textSize="8pt"
            android:textColor="#C9DDE9"
            android:background="@drawable/thin_button"/>
        <Button
            android:id="@+id/button_wallet_stats"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/button_wallet_stats"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_cjdns_stats"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textSize="8pt"
            android:textColor="#C9DDE9"
            android:background="@drawable/thin_button"/>
        <Button
            android:id="@+id/button_set_pin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/button_set_pin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_wallet_stats"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textSize="8pt"
            android:textColor="#C9DDE9"
            android:background="@drawable/thin_button"/>
        <Button
            android:id="@+id/button_check_update"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/action_check_update"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_set_pin"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textSize="8pt"
            android:textColor="#C9DDE9"
            android:background="@drawable/thin_button"/>
    </androidx.constraintlayout.widget.ConstraintLayout>