<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">
        <include layout="@layout/statusbar"/>
        <TextView
            android:id="@+id/label_wallets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:textSize="10pt"
            android:layout_marginTop="20dp"
            android:text="Wallets"/>
        <LinearLayout
            android:id="@+id/layout_wallets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/label_wallets"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:gravity="end">
                <Spinner
                    android:id="@+id/wallet_selector"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown"
                    android:layout_weight="1"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <ImageButton
                    android:id="@+id/button_edit_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_edit_24"
                    android:background="@android:color/transparent"
                    app:tint="@color/colorPrimary"
                    android:contentDescription="Edit wallet" />
                <ImageButton
                    android:id="@+id/button_add_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_badd_circle_48"
                    android:background="@android:color/transparent"
                    app:tint="@color/colorPrimary"
                    android:contentDescription="Add wallet" />
                <ImageButton
                    android:id="@+id/button_export_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_circle_up_24"
                    android:background="@android:color/transparent"
                    app:tint="@color/colorPrimary"
                    android:contentDescription="Export wallet" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/listOfActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/layout_wallets">
                <LinearLayout
                    android:id="@+id/button_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/verticalPaddingListofButtons"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/borderline">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_marginStart="1dp"
                            android:text="@string/button_wallet_change_password"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                            app:tint="@color/colorPrimary" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/button_set_pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/verticalPaddingListofButtons"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/borderline">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_marginStart="1dp"
                            android:text="@string/button_set_pin"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                            app:tint="@color/colorPrimary" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/button_show_seed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:paddingVertical="@dimen/verticalPaddingListofButtons"
                    android:background="@drawable/borderline">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_marginStart="1dp"
                            android:text="@string/button_show_seed"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                            app:tint="@color/colorPrimary" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/button_cjdns_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:paddingVertical="@dimen/verticalPaddingListofButtons"
                    android:background="@drawable/borderline">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_marginStart="1dp"
                            android:text="@string/button_cjdns_stats"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                            app:tint="@color/colorPrimary" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/button_wallet_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:paddingVertical="@dimen/verticalPaddingListofButtons"
                    android:background="@drawable/borderline">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_marginStart="1dp"
                            android:text="@string/button_wallet_stats"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                            app:tint="@color/colorPrimary" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/button_check_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:paddingVertical="@dimen/verticalPaddingListofButtons"
                    android:background="@drawable/borderline">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="1dp"
                            android:textSize="20sp"
                            android:text="@string/action_check_update"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                            app:tint="@color/colorPrimary" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/button_data_collection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:paddingVertical="@dimen/verticalPaddingListofButtons"
                    android:background="@drawable/borderline">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="1dp"
                            android:textSize="20sp"
                            android:text="@string/button_data_collection"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                            app:tint="@color/colorPrimary" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/button_connectPktcube"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:paddingVertical="@dimen/verticalPaddingListofButtons"
                    android:background="@drawable/borderline">
                        <TextView
                            android:id="@+id/text_connectPktcube"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="1dp"
                            android:textSize="20sp"
                            android:text="@string/button_connect_pktcube"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                            app:tint="@color/colorPrimary" />
                </LinearLayout>
                <CheckBox
                    android:id="@+id/upgrade_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:paddingVertical="15dp"
                        android:text="Upgrade with pre-release"/>
        </LinearLayout>
        <TextView
            android:id="@+id/user_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/listOfActions"
            android:textSize="10sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/darker_gray"
            app:layout_constraintStart_toEndOf="@+id/user_id_label"
            app:layout_constraintBottom_toBottomOf="@+id/user_id_label"
            android:textSize="10sp"
            android:layout_marginStart="5dp"/>
        <TextView
            android:id="@+id/version_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_id_label"
            android:text="Version: "
            android:textSize="10sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>