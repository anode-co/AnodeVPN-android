<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorPrimaryDarkText</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/MyActionBarStyle</item>
        <item name="actionBarTheme">@style/MyActionBarStyle</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/MyActionBarStyle</item>
    </style>
    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorPrimaryDarkText</item>
    </style>
    <style name="MyActionBarStyle"  parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimaryDarkText</item>
        <item name="android:background">@color/colorPrimarybackground</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AlertDialogRedButtonStyle">
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>
    <style name="EditWalletAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/black</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertDialogRedButtonStyle</item>
    </style>
</resources>
