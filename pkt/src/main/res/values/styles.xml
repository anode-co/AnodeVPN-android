<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="navigationIcon">@drawable/ic_toolbar_back</item>
        <item name="android:navigationIcon">@drawable/ic_toolbar_back</item>
        <item name="titleTextAppearance">?textAppearance18SemiBold</item>
        <item name="titleCentered">true</item>
    </style>

    <style name="Widget.App.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?textAppearance14Regular</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="minHeight">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="minWidth">200dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.24</item>
        <item name="android:textAppearance">?textAppearance16SemiBold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="maxLines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/btn_text_color_selector</item>
        <item name="backgroundTint">@color/btn_bg_color_selector</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="minHeight">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="minWidth">200dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.24</item>
        <item name="android:textAppearance">?textAppearance16Regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="maxLines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="strokeColor">?colorPrimary</item>
        <item name="android:strokeColor">?colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:strokeWidth">1</item>
    </style>

    <style name="Widget.App.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="minHeight">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.20</item>
        <item name="android:textAppearance">?textAppearance14Regular</item>
        <item name="maxLines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="paddingStart">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="paddingEnd">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="Widget.App.Button.PinKey" parent="Widget.App.Button.TextButton">
        <item name="minHeight">60dp</item>
        <item name="android:minHeight">60dp</item>
        <item name="minWidth">60dp</item>
        <item name="android:minWidth">60dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.Round</item>
        <item name="android:textAppearance">?textAppearance30SemiBold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="paddingStart">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="paddingEnd">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="maxLines">2</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Widget.App.CircularProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:indeterminate">true</item>
    </style>

    <style name="Widget.App.RecyclerView" parent="">
        <item name="android:overScrollMode">never</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:orientation">vertical</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <style name="Widget.App.ScrollView" parent="">
        <item name="android:overScrollMode">never</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Widget.App.ImageButton" parent="Widget.AppCompat.ImageButton" />

    <style name="Widget.App.ImageButton.Oval">
        <item name="minWidth">40dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="minHeight">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="background">@drawable/bg_oval</item>
        <item name="android:background">@drawable/bg_oval</item>
        <item name="backgroundTint">@color/bg2</item>
        <item name="android:backgroundTint">@color/bg2</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="minHeight">68dp</item>
        <item name="android:minHeight">68dp</item>
        <item name="itemPaddingTop">10dp</item>
        <item name="itemPaddingBottom">14dp</item>
        <item name="backgroundTint">?android:colorBackground</item>
        <item name="android:backgroundTint">?android:colorBackground</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="itemIconSize">22dp</item>
        <item name="itemTextColor">?android:textColorPrimary</item>
        <item name="itemTextAppearanceInactive">?textAppearance14Medium</item>
        <item name="itemTextAppearanceActive">?textAppearance14Medium</item>
    </style>

    <style name="Widget.App.PopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_popup_menu</item>
        <item name="android:dropDownHorizontalOffset">-8dp</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/outlined_stroke_color</item>
        <item name="boxStrokeErrorColor">?colorError</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.8</item>
        <item name="android:textColorHint">@color/indicator_text_color</item>
        <item name="hintTextColor">@color/indicator_text_color</item>
        <item name="hintTextAppearance">?textAppearance16Regular</item>
        <item name="editTextStyle">@style/Widget.App.TextInputEditText</item>
        <item name="hintEnabled">false</item>
        <item name="endIconTint">?android:textColorPrimary</item>
        <item name="endIconDrawable">@null</item>
        <item name="errorTextColor">?colorError</item>
        <item name="errorTextAppearance">?textAppearance12Regular</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="Widget.App.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textAppearance">?textAppearance16Regular</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="useMaterialThemeColors">false</item>
        <item name="android:button">@drawable/ic_checkbox</item>
        <item name="android:textAppearance">?textAppearance12Regular</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="paddingStart">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:gravity">start|top</item>
    </style>

    <style name="Widget.App.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Widget.App.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="useMaterialThemeColors">false</item>
        <item name="android:button">@drawable/rbtn_button</item>
        <item name="buttonTint">@null</item>
        <item name="android:buttonTint">@null</item>
    </style>

</resources>
