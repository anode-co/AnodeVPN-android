<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.App" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/color1</item>
        <item name="colorPrimaryVariant">@color/color1</item>
        <item name="colorOnPrimary">@color/text1</item>
        <item name="colorSecondary">@color/color1</item>
        <item name="colorSecondaryVariant">@color/color1</item>
        <item name="colorOnSecondary">@color/text1</item>
        <item name="android:colorBackground">@color/bg1</item>
        <item name="colorOnBackground">@color/text1</item>
        <item name="colorSurface">@color/bg3</item>
        <item name="colorOnSurface">@color/text1</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/text1</item>
        <item name="colorSuccess">@color/green</item>
        <item name="colorOnSuccess">@color/text1</item>
        <item name="colorProgress">@color/yellow</item>
        <item name="colorOnProgress">@color/text1</item>

        <item name="android:windowBackground">@color/bg1</item>
        <item name="android:statusBarColor">@color/bg1</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/bg1</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

        <item name="android:textColorPrimary">@color/text1</item>
        <item name="android:textColorSecondary">@color/text1_50</item>

        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="android:textViewStyle">@style/Widget.App.TextView</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.App.Button.OutlinedButton</item>
        <item name="borderlessButtonStyle">@style/Widget.App.Button.TextButton</item>
        <item name="circularProgressIndicatorStyle">@style/Widget.App.CircularProgressIndicator</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="popupMenuStyle">@style/Widget.App.PopupMenu</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>
        <item name="radioButtonStyle">@style/Widget.App.RadioButton</item>

        <item name="textAppearance12Regular">@style/TextAppearance.App.12.Regular</item>
        <item name="textAppearance12Medium">@style/TextAppearance.App.12.Medium</item>
        <item name="textAppearance14Regular">@style/TextAppearance.App.14.Regular</item>
        <item name="textAppearance14Medium">@style/TextAppearance.App.14.Medium</item>
        <item name="textAppearance14SemiBold">@style/TextAppearance.App.14.SemiBold</item>
        <item name="textAppearance16Regular">@style/TextAppearance.App.16.Regular</item>
        <item name="textAppearance16SemiBold">@style/TextAppearance.App.16.SemiBold</item>
        <item name="textAppearance16Bold">@style/TextAppearance.App.16.Bold</item>
        <item name="textAppearance18SemiBold">@style/TextAppearance.App.18.SemiBold</item>
        <item name="textAppearance20Medium">@style/TextAppearance.App.20.Medium</item>
        <item name="textAppearance20SemiBold">@style/TextAppearance.App.20.SemiBold</item>
        <item name="textAppearance30SemiBold">@style/TextAppearance.App.30.SemiBold</item>

        <item name="textAppearanceLargePopupMenu">@style/TextAppearance.App.PopupMenu</item>
        <item name="android:textAppearanceLargePopupMenu">@style/TextAppearance.App.PopupMenu</item>
        <item name="textAppearanceSmallPopupMenu">@style/TextAppearance.App.PopupMenu</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/TextAppearance.App.PopupMenu</item>

        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.App.DatePicker</item>
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.App.DatePicker.Fullscreen</item>

    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/Widget.App.BottomSheet</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:background">@color/bg3</item>

        <item name="materialCalendarStyle">@style/Widget.App.MaterialCalendar</item>

        <!-- Header Styles -->
        <item name="materialCalendarHeaderLayout">@style/Widget.App.MaterialCalendar.HeaderLayout</item>
        <item name="materialCalendarHeaderDivider">@style/Widget.MaterialComponents.MaterialCalendar.HeaderDivider</item>
        <item name="materialCalendarHeaderTitle">@style/Widget.App.MaterialCalendar.HeaderTitle</item>
        <item name="materialCalendarHeaderSelection">@style/Widget.App.MaterialCalendar.HeaderSelection</item>
        <item name="materialCalendarHeaderCancelButton">@style/Widget.App.MaterialCalendar.HeaderCancelButton</item>
        <item name="materialCalendarHeaderConfirmButton">@style/Widget.App.MaterialCalendar.HeaderConfirmButton</item>
        <item name="materialCalendarHeaderToggleButton">@style/Widget.App.MaterialCalendar.HeaderToggleButton</item>

        <!-- Navigation Styles -->
        <item name="materialCalendarYearNavigationButton">@style/Widget.MaterialComponents.MaterialCalendar.YearNavigationButton</item>
        <item name="materialCalendarMonthNavigationButton">@style/Widget.MaterialComponents.MaterialCalendar.MonthNavigationButton</item>

        <!-- Grid Styles -->
        <item name="materialCalendarDayOfWeekLabel">@style/Widget.App.MaterialCalendar.DayOfWeekLabel</item>
        <item name="materialCalendarDay">@style/Widget.App.MaterialCalendar.DayTextView</item>
        <item name="materialCalendarMonth">@style/Widget.App.MaterialCalendar.MonthTextView</item>

        <!-- Action Styles -->
        <item name="buttonBarPositiveButtonStyle">@style/Widget.MaterialComponents.Button.TextButton.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.MaterialComponents.Button.TextButton.Dialog</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker.Fullscreen">
        <item name="android:windowIsFloating">false</item>
        <item name="materialCalendarStyle">@style/Widget.App.MaterialCalendar.Fullscreen</item>
        <item name="materialCalendarHeaderSelection">@style/Widget.App.MaterialCalendar.HeaderSelection.Fullscreen</item>
    </style>

</resources>
