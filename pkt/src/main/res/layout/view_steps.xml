<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/linesFlow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="line1View,line2View,line3View,line4View"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line1View"
        android:layout_width="48dp"
        android:layout_height="1dp"
        android:background="@drawable/shape_rectangle"
        android:backgroundTint="@color/stroke1" />

    <View
        android:id="@+id/line2View"
        android:layout_width="48dp"
        android:layout_height="1dp"
        android:background="@drawable/shape_rectangle"
        android:backgroundTint="@color/stroke1" />

    <View
        android:id="@+id/line3View"
        android:layout_width="48dp"
        android:layout_height="1dp"
        android:background="@drawable/shape_rectangle"
        android:backgroundTint="@color/stroke1" />

    <View
        android:id="@+id/line4View"
        android:layout_width="48dp"
        android:layout_height="1dp"
        android:background="@drawable/shape_rectangle"
        android:backgroundTint="@color/stroke1" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/dotsFlow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="dot1View,dot2View,dot3View,dot4View,dot5View"
        app:flow_horizontalGap="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/dot1View"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/shape_oval"
        android:backgroundTint="?colorPrimary" />

    <View
        android:id="@+id/dot2View"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/shape_oval"
        android:backgroundTint="@color/stroke1" />

    <View
        android:id="@+id/dot3View"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/shape_oval"
        android:backgroundTint="@color/stroke1" />

    <View
        android:id="@+id/dot4View"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/shape_oval"
        android:backgroundTint="@color/stroke1" />

    <View
        android:id="@+id/dot5View"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/shape_oval"
        android:backgroundTint="@color/stroke1" />

</merge>
