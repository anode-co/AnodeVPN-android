<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/spacing_horizontal"
    android:paddingTop="32dp"
    android:paddingBottom="9dp">

    <TextView
        android:id="@+id/titleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connected_servers"
        android:textAppearance="?textAppearance20SemiBold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/countLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:background="@drawable/shape_rounded_20dp"
        android:backgroundTint="?colorSurface"
        android:paddingHorizontal="10dp"
        android:paddingVertical="2dp"
        android:textAppearance="?textAppearance14Regular"
        android:textColor="?android:textColorSecondary"
        app:layout_constraintBottom_toBottomOf="@id/titleLabel"
        app:layout_constraintStart_toEndOf="@id/titleLabel"
        app:layout_constraintTop_toTopOf="@id/titleLabel"
        tools:text="6" />

</androidx.constraintlayout.widget.ConstraintLayout>
